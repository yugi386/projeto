  </div>

<div class="field">
    <%= f.label :Caixa_Postal %><br />
    <%= f.text_field :cpostal2 %>
  </div>
  
  <div class="field">
    <%= f.label :Telefone %><br />
    <%= f.text_field :telefone2 %>
  </div>
  
  <div class="field">
    <%= f.label :Celular %><br />
    <%= f.text_field :celular2 %>
  </div>  
 
<BR><strong>E-MAIL E SENHA:</STRONG><BR>		  
  
  <div class="field">
    <%= f.label :Email %><br />
    <%= f.text_field :email, :size => 40 %>
  </div>
  
  <div class="field">
    <%= f.label :Senha %><br />
