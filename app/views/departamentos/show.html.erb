<!--  LISTANDO FICHA INDIVIDUAL DO DEPARTAMENTO -->

<h2 class="title">Exibindo Cadastro do Departamento</h2>
<HR SIZE = 5 color="blue">

<table BORDER = 0>
	<tr bgcolor = "#F5DEB3"><td colspan="2"><strong>IDENTIFICAÇÃO:</STRONG></tR>		  
	<tr><td>
		<b>Nome:</b>
	</td><td>
		<%= @departamento.nome %>
	</td></tr>

	<tr><td>
		<b>Departamento Ativo?:</b>
	</td><td>
		<%= tbol(@departamento.ativo) %>
	</td></tr>

	<tr><td>
		<b>Destaque:</b>
	</td><td>
		<%= @departamento.destaque %>
	</td></tr>
	
	<tr bgcolor = "#F5DEB3"><td colspan="2"><strong>IMAGEM:</STRONG></tR>		  
	
	<td colspan="2">
		<% if @departamento.arquivo_file_name != nil %>
			<%= image_tag(@departamento.arquivo.url, :size => "300x400") %>		<!-- assim são chamadas as imagens... -->
		<% else %>
			Não há imagem para este Departamento.
		<% end %>	

				
	</td></tr>
	
	<tR bgcolor = "#F5DEB3"><td colspan="2"><strong>DESCRIÇÃO</STRONG></td></tR>	
	<TR><td COLSPAN=2>
		<%= @departamento.descricao %>
	</td></TR>  

</table>

<br><HR SIZE = 5 color="blue">
<%= link_to image_tag("voltar.png") , departamentos_path  %>