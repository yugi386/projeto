<h1>LOGIN</h1>

<% if @clogin == nil %>
	<h3>DIGITE O E-MAIL E A SENHA PARA ENTRAR NO SISTEMA!</h3>
<% end %>

<%= form_tag "clogins", :method => "post" %>

	<table width="200px">
		<tr><td>E-mail:</td>
		<td><input type ="text" name="login" id="login" size="40"></td>
		</tr>
		
		<tr><td>Senha:</td>
		<td><input type ="password" name="password" id="password" size="40"></td></tr>
	</table>

	<input type="submit" id="search-submit" value="Login"  />
	
</form>

<br>
<% if session[:logcli] != 0 and session[:logcli] != nil%>
	<%= link_to "Logout", "/client_logout", :method => :delete %>
<% end %>