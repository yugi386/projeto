<!--  LISTANDO FICHA INDIVIDUAL DO SESSÃO -->

<h2 class="title">Exibindo Cadastro da Seção</h2>
<HR SIZE = 5 color="blue">

<table BORDER = 0>
	<tr bgcolor = "#F5DEB3"><td colspan="2"><strong>IDENTIFICAÇÃO:</STRONG></tR>		  
	<tr><td>
		<b>Nome:</b>
	</td><td>
		<%= @section.nome %>
	</td></tr>

	<tr><td>
		<b>Departamento Ativo?:</b>
	</td><td>
		<%= tbol(@section.ativo) %>
	</td></tr>

	<tr><td>
		<b>Departamento:</b>
	</td><td>
		<%= Departamento.find(@section.departamento_id).nome %>	<!-- nome do departamento a que pertence esta seção -->
	</td></tr>
	
	<tr><td>
		<b>Destaque:</b>
	</td><td>
		<%= @section.destaque %>
	</td></tr>
	
	<tr bgcolor = "#F5DEB3"><td colspan="2"><strong>IMAGEM:</STRONG></tR>		  
	
	<td colspan="2">
		<% if @section.arquivo_file_name != nil %>
			<%= image_tag(@section.arquivo.url, :size => "300x400") %>		<!-- assim são chamadas as imagens... -->
		<% else %>
			Não há imagem para esta Seção.
		<% end %>	

				
	</td></tr>
	
	<tR bgcolor = "#F5DEB3"><td colspan="2"><strong>DESCRIÇÃO</STRONG></td></tR>	
	<TR><td COLSPAN=2>
		<%= @section.descricao %>
	</td></TR>  

</table>

<br><HR SIZE = 5 color="blue">
<%= link_to image_tag("voltar.png") , "/section"  %>