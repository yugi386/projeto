<!--  LISTANDO FICHA INDIVIDUAL DO PRODUTO -->

<h2 class="title">Exibindo Cadastro do Produto</h2>
<HR SIZE = 5 color="blue">

<table BORDER = 0>
	<tr bgcolor = "#F5DEB3"><td colspan="2"><strong>IDENTIFICAÇÃO:</STRONG></tR>		  
	<tr><td>
		<b>Nome:</b>
	</td><td>
		<%= @produt.nome %>
	</td></tr>

	<tr><td>
		<b>Código do Produto:</b>
	</td><td>
		<%= @produt.codigo %>
	</td></tr>

	<tr><td>
		<b>Data do Cadastro:</b>
	</td><td>
	  <%= @produt.data.strftime("%d/%m/%Y") %>	<!-- mostra data formato brasileiro -->
	</td></tr>
	
	<tr><td>
		<b>Departamento:</b>
	</td><td>
		<%= Departamento.find(@produt.departamento_id).nome %>	<!-- nome do departamento a que pertence esta seção -->
	</td></tr>
	
	<tr><td>
		<b>Seção:</b>
	</td><td>
		<%= Section.find(@produt.section_id).nome %>	<!-- nome da seção a que pertence esta seção -->
	</td></tr>
	
	<tr><td>
		<b>Modelo:</b>
	</td><td>
		<%= @produt.modelo %>
	</td></tr>

	<tr><td>
		<b>Unidade:</b>
	</td><td>
		<%= @produt.unidade %>
	</td></tr>
	
	<tr><td>
		<b>Produto Ativo?:</b>
	</td><td>
		<%= tbol(@produt.ativo) %>
	</td></tr>

	<tr><td>
		<b>Destaque:</b>
	</td><td>
		<%= @produt.destaque %>
	</td></tr>
	
	<tr bgcolor = "#F5DEB3"><td colspan="2"><strong>QUANTIDADE EM ESTOQUE:</STRONG></tR>		  
	
	<tr><td>
		<b>Quantidade em Estoque:</b>
	</td><td>
		<%= @produt.quant %>
	</td></tr>
	
	<tr bgcolor = "#F5DEB3"><td colspan="2"><strong>PREÇOS:</STRONG></tR>		  
	
	<tr><td>
		<b>Preço de Custo:</b>
	</td><td>
		<%= @produt.custo %>
	</td></tr>
	
	<tr><td>
		<b>Preço a Vista:</b>
	</td><td>
		<%= @produt.vista %>
	</td></tr>
	
	<tr><td>
		<b>Preço a Prazo:</b>
	</td><td>
		<%= @produt.prazo %>
	</td></tr>
	
	<tr><td>
		<b>Desconto:</b>
	</td><td>
		<%= @produt.desconto %>
	</td></tr>
	
	<tr><td>
		<b>Preço Oculto?:</b>
	</td><td>
		<%= tbol(@produt.preco_oculto) %>
	</td></tr>
	
	<tr><td>
		<b>Máximo de Parcelas:</b>
	</td><td>
		<%= @produt.parcelas %>
	</td></tr>
	
	<tr bgcolor = "#F5DEB3"><td colspan="2"><strong>CONTROLE DE FRETE:</STRONG></tR>		  
	
	<tr>
		<td> <b>Frete - Região Norte:</b> </td>
		<td> <%= @produt.fnorte %> </td>
	</tr>
	
	<tr>
		<td> <b>Frete - Região Nordeste:</b> </td>
		<td> <%= @produt.fnordeste %> </td>
	</tr>
	
	<tr>
		<td> <b>Frete - Região Centro-Oeste:</b> </td>
		<td> <%= @produt.fcentro %> </td>
	</tr>
	
	<tr>
		<td> <b>Frete - Região Sudeste:</b> </td>
		<td> <%= @produt.fsudeste %> </td>
	</tr>
	
	<tr>
		<td> <b>Frete - Região Sul:</b> </td>
		<td> <%= @produt.fsul %> </td>
	</tr>
	
	<tr bgcolor = "#F5DEB3"><td colspan="2"><strong>IMAGEM:</STRONG></tR>		  
	
	<td colspan="2">
		<% if @produt.arquivo_file_name != nil %>
			<%= image_tag(@produt.arquivo.url, :size => "300x400") %>		<!-- assim são chamadas as imagens... -->
		<% else %>
			Não há imagem para este Produto.
		<% end %>	
				
	</td></tr>
	
	<tR bgcolor = "#F5DEB3"><td colspan="2"><strong>DESCRIÇÃO</STRONG></td></tR>	
	<TR><td COLSPAN=2>
		<%= @produt.descricao %>
	</td></TR>  

</table>

<br><HR SIZE = 5 color="blue">
<%= link_to image_tag("voltar.png") , "/produts"  %>