<h1>LOGIN</h1>

<%= form_tag sessions_path, :method => "post" %>

	<table width="200px">
		<tr><td>E-mail:</td>
		<td><input type ="text" name="login" id="login" size="40"></td>
		</tr>
		
		<tr><td>Senha:</td>
		<td><input type ="password" name="password" id="password" size="40"></td></tr>
	</table>

	<button>Login</button>
</form>

<br>
<% if session[:logged] == true %>
	<%= link_to "Logout", sessions_path, :method => :delete %>
<% end %>